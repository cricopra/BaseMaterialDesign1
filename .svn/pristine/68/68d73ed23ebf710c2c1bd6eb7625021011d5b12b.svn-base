<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="co.playtech.otrosproductosrd.fragments.VerificacionTiqueteFragment">

    <!-- TODO: Update blank fragment layout -->
    <EditText
        android:id="@+id/etVerificacionTiquete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_login"
        android:singleLine="true"
        android:layout_marginRight="@dimen/margin_login"
        android:hint="@string/hint_codigo_tiquete"
        android:gravity="center_horizontal"
        android:layout_marginTop="50dp"/>

    <Button
        android:id="@+id/btnVerificarTiquete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/lblVerificar"
        android:singleLine="true"
        android:layout_marginLeft="@dimen/margin_login"
        android:layout_marginRight="@dimen/margin_login"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:background="@drawable/selector_buttton"/>

</LinearLayout>
