<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="co.playtech.otrosproductosrd.fragments.ConsultasRecargaFragment"
    android:layout_centerVertical="true"
    android:gravity="center_vertical"
    android:paddingBottom="100dp">

    <!-- TODO: Update blank fragment layout -->


    <Button
        android:id="@+id/btnUltimaRecarga"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/lblUltimaRecarga"
        android:background="@drawable/selector_buttton"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginRight="@dimen/margin_icon"
        android:layout_marginLeft="@dimen/margin_icon"/>

    <Button
        android:id="@+id/btnTotalVentaRecargas"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/lblTotalVentaRecarga"
        android:background="@drawable/selector_buttton"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginRight="@dimen/margin_icon"
        android:layout_marginLeft="@dimen/margin_icon"/>



</LinearLayout>
